<%= form_with(model: article) do |form| %>
  <% if article.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(article.errors.count, "error") %> prohibited this article from being saved:</h2>

      <ul>
        <% article.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <%= form.label :title, style: "display: block", :id => "title-label", :class => "labels-inside-form" %>
    <%= form.text_field :title, :class => "fields-inside-form" %>
  </div>

  <div>
    <%= form.label :date, style: "display: block", :class => "labels-inside-form" %>
    <%= form.date_field :date, :id => "date-input-field" %>
  </div>

  <div>
    <%= form.label :category, style: "display: block", :class => "labels-inside-form" %>
    <%= form.text_field :category, :class => "fields-inside-form" %>
  </div>

  <div>
    <%= form.label :content, style: "display: block", :class => "labels-inside-form" %>
    <%= form.text_field :content, :id => "content-text-field", :class => "fields-inside-form" %>
  </div>

  <div id="submit-button" >
    <%= form.submit%>
  </div>
<% end %>
