<p style="color: green"><%= notice %></p>

<h1 id="articles_title">Articles</h1>

<div class="articles">
<%= link_to "New Article", new_article_path, :class => "new_article_link"  %>

  <% @articles.reverse.each do |article| %>
    <%= link_to article do %>
      <div class="article" >
        <h3><%= article.title.titleize %></h3> 
        <p class="article_content"><%= article.content %></p> 
        <p class="show_article_link">
          <%= link_to "Show this article", article %>
        </p>
      </div>
    <% end %>
  <% end %>
</div>

